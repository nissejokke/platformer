{
    "compilerOptions": {
        "outDir": "dist",
        "incremental": true,
        // "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable", 
            "es2015",
            "es2015.promise",
            "es2015.generator",
            "es2015.core",
            "es2015.collection",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.generator",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "newLine": "LF",
        "sourceMap": false
    }
}
